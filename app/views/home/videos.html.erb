          <% @videos.each do |video| %>
            <div class="video-section">
              <h5><%= video['title'] %></h5>
              
              <p style="margin-bottom: 20px;"><%= video['description'].html_safe %></p>

              <iframe src="//player.vimeo.com/video/<%= video['id'] %>?title=0&amp;byline=0&amp;portrait=0&amp;color=ffffff" width="500" height="281" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
            </div>
          <% end %>


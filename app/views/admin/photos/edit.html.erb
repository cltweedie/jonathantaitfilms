<%= form_for @photo, url: url_for(controller: 'photos', action: 'update') do |f| %>
  <%= image_tag @photo.image.url, data: {style: 'width: 200px;'} %><br/>
  <%= f.label :caption %>
  <%= f.text_area :caption, class: 'form-control' %><br />
  <%= f.file_field :image, class: 'form-control' %>
  <%= f.hidden_field :image_cache %>
  <%= f.submit 'Save Photo', class: 'btn btn-primary' %>
<% end %>

<script>
$(function() {
  $('.nav-item').removeClass('active');
  $('.nav-item.nav-galleries-item').addClass('active');
});
</script>

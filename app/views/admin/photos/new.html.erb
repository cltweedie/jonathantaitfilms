<%= form_for :photo, url: url_for(controller: 'photos', action: 'create') do |f| %>
  <%= f.label :caption %>
  <%= f.text_area :caption, class: 'form-control' %><br />
  <%= f.file_field :image, class: 'form-control' %>
  <%= f.hidden_field :image_cache %>
  <%= f.submit 'Add Photo', class: 'btn btn-primary' %>
<% end %>
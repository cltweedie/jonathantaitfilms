<h2><%= @album.title %></h2>

<div style="margin: 20px 5px 30px;">
  <a href="<%= new_admin_album_photo_path %>" class="btn btn-primary">Upload Photo</a>
</div>

<div class="card-columns">
  <% @album.photos.each do |photo| %>
    <div class="card photo-card" style="display: inline-block;">
      <div class="card-img-top" style="height: 300px; overflow: hidden;">
        <img class="card-img-top" src="<%= photo.image_url %>" alt="Card image cap" style="width: 130%;">
      </div>
      <div class="card-block">
        <h4 class="card-title"><%= photo.title %></h4>
        <p class="card-text"><%= photo.caption %></p>
        <a href="#" class="btn btn-primary">Edit</a>
        <%= link_to "Delete", admin_album_photo_path(@album, photo), method: :delete, data: { confirm: 'Are you sure you want to delete this photo?' }, class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>
</div>

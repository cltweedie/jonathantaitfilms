<ol class="breadcrumb">
    <li class="breadcrumb-item active">
      <a href="<%= admin_albums_path %>">Albums</a>
    </li>
</ol>

<a href="<%= new_admin_album_path %>" class="btn btn-primary">New Album</a>

<table class="table albums-table">
  <thead>
    <th>Title</th>
    <th>Description</th>
  </thead>
  <tbody>
    <% Album.all.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.description %></td>
        <td>
          <a href="<%= admin_album_photos_path(album.id) %>" class="btn btn-outline-primary">
            Photos
          </a>
          <a href="<%= edit_admin_album_path(album) %>" class="btn btn-outline-warning">
            Edit
          </a>
          <%= link_to "Delete", admin_album_path(album), method: :delete, data: { confirm: 'Are you sure you want to delete this album?' }, class: 'btn btn-outline-danger' %>
        </td>
      <tr>
    <% end %>
  </tbody>
</table>

<style>
.albums-table .btn {
  width: 100%;
}
.albums-table {
  margin-top: 30px;
}
</style>

<script>
$(function() {
  $('.nav-item').removeClass('active');
  $('.nav-item.nav-galleries-item').addClass('active');
});
</script>

<ol class="breadcrumb">
    <li class="breadcrumb-item active">
      <a href="<%= admin_albums_path %>">Albums</a>
    </li>
</ol>

<a href="<%= new_admin_album_path %>" class="btn btn-primary">New Album</a>

<table class="table">
  <thead>
    <th>Title</th>
    <th>Description</th>
  </thead>
  <tbody>
    <% Album.all.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.description %></td>
        <td>
          <a href="<%= admin_album_photos_path(album.id) %>" class="btn btn-primary">
            Photos
          </a>
          <a href="#" class="btn btn-warning">
            Edit Details
          </a>
          <%= link_to "Delete", admin_album_path(album), method: :delete, data: { confirm: 'Are you sure you want to delete this album?' }, class: 'btn btn-danger' %>
        </td>
      <tr>
    <% end %>
  </tbody>
</table>

<ol class="breadcrumb">
    <li class="breadcrumb-item active">
      <a href="<%= admin_albums_path %>">Albums</a>
    </li>
</ol>

<p>Content for albums view</p>

<!-- This should go in the 'new' album view -->
<%= form_for :album do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %><br />
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %><br />
  <div class="form-check">
    <label class="form-check-label">
      <%= f.check_box :published, class: 'form-check-input' %>
      Publish?
    </label>
  </div>
  <%= f.submit 'Create Album', class: 'btn btn-primary' %>
<% end %>
